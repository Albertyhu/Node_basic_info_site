<%- include('./partials/header') %>
<body>
    <%- include('./partials/navbar') %>
    <main>
        <h1>Contact Us</h1>
        <form id="NewBlogForm" method="POST" action="/blog">
            <div id="FormField">
                <label>Title</label>
                <input type="text" id="title" class="formInput"  name="title" />
            </div>
            <div id="FormField">
                <label>Snippet</label>
                <input type="text" id="snippet"  class="formInput" name="snippet" />
            </div>
