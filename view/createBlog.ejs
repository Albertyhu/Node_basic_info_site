                <label>Main message</label>
                <textarea rows="8" id="body" class="BlogTextarea" name="body"></textarea>
            </div>
            <input type="submit" value="Submit" id="CreateBlogSubmit" />
        </form>
    </main>
    <script src="index.js"></script>
</body>
